<Window
    x:Class="BaseRPG.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BaseRPG"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml" xmlns:windows="using:BaseRPG.View.Windows"
    mc:Ignorable="d"
    >
    
   
    <Canvas
        x:Name = "mainCanvas"
        KeyDown="KeyDown"
        KeyUp="KeyUp"
        PointerPressed="PointerPressed"
        PointerReleased="PointerReleased"
        PointerMoved="PointerMoved">
        
        <canvas:CanvasVirtualControl
            Canvas.Left="0" Canvas.Top="0"
            x:Name="canvas"
            RegionsInvalidated="canvas_Draw"
            CreateResources="canvas_CreateResources"
            Visibility="Visible"
            />
        <windows:InventoryWindow>
            
        </windows:InventoryWindow>




