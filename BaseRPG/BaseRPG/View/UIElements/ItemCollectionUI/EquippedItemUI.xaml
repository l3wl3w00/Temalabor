<UserControl
    x:Class="BaseRPG.View.UIElements.ItemCollectionUI.EquippedItemUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BaseRPG.View.UIElements.Inventory"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:xaml="using:Microsoft.Graphics.Canvas.UI.Xaml" xmlns:customcontrol="using:BaseRPG.View.UIElements.CustomControl"
    mc:Ignorable="d">

    <Grid Height="Auto"  Padding="10" ColumnSpacing="10" >

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <customcontrol:ButtonWithCanvas Grid.Column="0" x:Name="equippedWeaponButton" CanvasDraw="equippedWeaponCanvas_Draw"  ButtonClick="equippedWeaponButton_Click"/>
        <customcontrol:ButtonWithCanvas Grid.Column="1" x:Name="equippedArmorButton" CanvasDraw="equippedArmorCanvas_Draw"  ButtonClick="equippedArmorButton_Click"/>
        <customcontrol:ButtonWithCanvas Grid.Column="2" x:Name="equippedShoeButton" CanvasDraw="equippedShoeCanvas_Draw"  ButtonClick="equippedShoeButton_Click"/>
    </Grid>
</UserControl>
