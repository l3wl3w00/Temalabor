<UserControl
    x:Class="BaseRPG.View.UIElements.Gold.GoldUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BaseRPG.View.UIElements.Gold"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:xaml="using:Microsoft.Graphics.Canvas.UI.Xaml"
    mc:Ignorable="d">

    <StackPanel Margin="10,0,10,0" Orientation="Horizontal">
        
        <xaml:CanvasControl x:Name="goldCanvas" Width="64" Height="64" Draw="goldCanvas_Draw"/>
        <TextBlock Grid.Column="1" VerticalAlignment="Center" FontSize="36" FontFamily="Arial" Margin="0,0,10,0">:</TextBlock>
        <TextBlock x:Name="goldText" Grid.Column="1" VerticalAlignment="Center" FontSize="36" FontFamily="Arial"></TextBlock>
    </StackPanel>
</UserControl>
